{
  "name": "@eggjs/koa",
  "version": "3.0.0-alpha.0",
  "engines": {
    "node": ">= 22.17.1"
  },
  "publishConfig": {
    "access": "public",
    "tag": "alpha"
  },
  "description": "Koa web app framework for https://eggjs.org",
  "scripts": {
    "pretest": "npm run lint -- --fix",
    "test": "node --test --test-force-exit --test-update-snapshots",
    "preci": "npm run lint",
    "ci": "NODE_V8_COVERAGE=./coverage npm test -- --experimental-test-coverage",
    "postci": "npm run prepublishOnly && attw --pack",
    "lint": "oxlint",
    "prepublishOnly": "npm run clean && npm run build",
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown --cache",
    "*.{ts,js,json,md,yml}": [
      "prettier --ignore-unknown --write",
      "oxlint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:eggjs/koa.git"
  },
  "keywords": [
    "web",
    "app",
    "http",
    "application",
    "framework",
    "middleware",
    "rack"
  ],
  "license": "MIT",
  "dependencies": {
    "@types/content-disposition": "^0.5.8",
    "accepts": "^1.3.8",
    "cache-content-type": "^2.0.0",
    "content-disposition": "~0.5.4",
    "content-type": "^1.0.5",
    "cookies": "^0.9.1",
    "destroy": "^1.0.4",
    "encodeurl": "^1.0.2",
    "escape-html": "^1.0.3",
    "fresh": "~0.5.2",
    "gals": "^1.0.1",
    "http-errors": "^2.0.0",
    "is-type-of": "^2.1.0",
    "koa-compose": "^4.1.0",
    "on-finished": "^2.4.1",
    "parseurl": "^1.3.3",
    "statuses": "^2.0.1",
    "type-is": "^1.6.18",
    "vary": "^1.1.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@eggjs/tsconfig": "2",
    "@types/accepts": "^1.3.7",
    "@types/content-type": "^1.1.8",
    "@types/cookies": "^0.9.0",
    "@types/destroy": "^1.0.3",
    "@types/encodeurl": "^1.0.2",
    "@types/escape-html": "^1.0.4",
    "@types/fresh": "^0.5.2",
    "@types/http-errors": "^2.0.4",
    "@types/koa-compose": "^3.2.8",
    "@types/node": "24",
    "@types/on-finished": "^2.3.4",
    "@types/parseurl": "^1.3.3",
    "@types/statuses": "^2.0.5",
    "@types/supertest": "^6.0.2",
    "@types/type-is": "^1.6.6",
    "@types/vary": "^1.1.3",
    "husky": "9",
    "lint-staged": "15",
    "mm": "^4.0.1",
    "oxlint": "^1.9.0",
    "prettier": "3",
    "supertest": "^3.1.0",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ]
}
